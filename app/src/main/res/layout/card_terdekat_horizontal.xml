<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:elevation="2dp"
    android:background="@color/white"
    app:cardCornerRadius="10dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerTokoTerdekatBeranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="148dp"
            android:layout_height="215dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageTerdekatBeranda"
                android:layout_width="148dp"
                android:layout_height="92dp"
                android:scaleType="fitXY"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textNamaTokoTerdekatBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:ems="3"
                android:fontFamily="@font/manrope_bold"
                android:inputType="textMultiLine|textImeMultiLine|textNoSuggestions"
                android:maxWidth="132dp"
                android:maxLines="2"
                android:minWidth="132dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/shimmer_background_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageTerdekatBeranda"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textAlamatTokoTerdekatBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:ems="3"
                android:fontFamily="@font/manrope_regular"
                android:maxWidth="132dp"
                android:maxLines="1"
                android:minWidth="132dp"
                android:background="@drawable/shimmer_background_text"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@+id/textTipeTokoTerdekatBeranda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textTipeTokoTerdekatBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:ems="3"
                android:fontFamily="@font/manrope_regular"
                android:maxLines="1"
                android:minWidth="132dp"
                android:maxWidth="132dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:background="@drawable/shimmer_background_text"
                app:layout_constraintBottom_toTopOf="@+id/textJarakTerdekatBeranda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textJarakTerdekatBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/manrope_regular"
                android:minWidth="35dp"
                android:background="@drawable/shimmer_background_text"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.cardview.widget.CardView>