<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="2dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="18dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logoTokoPopuler"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@mipmap/ic_launcher" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ratingPopuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/white"

            android:fontFamily="@font/fredokaone_regular"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"

            android:minHeight="0dp"
            android:text="4.2"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"

            android:clickable="false"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_star"
            app:iconGravity="start"
            app:iconTint="@color/yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/logoTokoPopuler"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textNamaTokoPopuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/manrope_bold"
            android:text="McDonald's Ahmad Yani, Padang"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/logoTokoPopuler"
            app:layout_constraintTop_toTopOf="@+id/logoTokoPopuler" />

        <TextView
            android:id="@+id/textAlamatTokoPopuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/manrope_regular"
            android:text="Jl. Ahmad Yani Padang"
            android:textAlignment="textStart"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/logoTokoPopuler"
            app:layout_constraintTop_toBottomOf="@+id/textNamaTokoPopuler" />

        <TextView
            android:id="@+id/textTipeTongkrongan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/manrope_regular"
            android:text="Aneka Nasi, Jajanan"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/logoTokoPopuler"
            app:layout_constraintTop_toBottomOf="@+id/textAlamatTokoPopuler"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/textJarakTongkrongan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/manrope_regular"
            android:text="5.3"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/logoTokoPopuler"
            app:layout_constraintTop_toBottomOf="@+id/textTipeTongkrongan" />

        <TextView
            android:id="@+id/satuanJarak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/manrope_regular"
            android:text="Km"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/textJarakTongkrongan"
            app:layout_constraintTop_toTopOf="@+id/textJarakTongkrongan" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>