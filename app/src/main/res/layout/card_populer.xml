<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="12dp"
    android:elevation="2dp"
    android:background="@color/white"
    app:cardCornerRadius="10dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerTokoPopuler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:padding="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageTokoPopuler"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:background="@drawable/shimmer_background_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ratingPopuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:backgroundTint="@color/white"
                android:clickable="false"
                android:fontFamily="@font/fredokaone_regular"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="2dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="4.2"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:cornerRadius="50dp"
                app:icon="@drawable/ic_star"
                app:iconGravity="start"
                app:iconTint="@color/yellow"
                app:layout_constraintEnd_toEndOf="@+id/imageTokoPopuler"
                app:layout_constraintStart_toStartOf="@+id/imageTokoPopuler"
                app:layout_constraintTop_toTopOf="@+id/imageTokoPopuler"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textNamaTokoPopuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:ems="3"
                android:fontFamily="@font/manrope_bold"
                android:background="@drawable/shimmer_background_text"
                android:inputType="textMultiLine|textImeMultiLine|textNoSuggestions"
                android:maxLines="1"
                android:minWidth="250dp"
                android:maxWidth="250dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageTokoPopuler"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textAlamatTokoPopuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ems="3"
                android:ellipsize="end"
                android:minWidth="250dp"
                android:maxWidth="250dp"
                android:fontFamily="@font/manrope_regular"
                android:background="@drawable/shimmer_background_text"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageTokoPopuler"
                app:layout_constraintTop_toBottomOf="@+id/textNamaTokoPopuler" />

            <View
                android:id="@+id/viewGaris"
                android:layout_width="250dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageTokoPopuler"
                app:layout_constraintTop_toBottomOf="@+id/textAlamatTokoPopuler" />

            <TextView
                android:id="@+id/textTipeTongkrongan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/manrope_regular"
                android:background="@drawable/shimmer_background_text"
                android:minWidth="70dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/imageTokoPopuler"
                app:layout_constraintTop_toBottomOf="@+id/viewGaris"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/textJarakTongkrongan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/manrope_regular"
                android:background="@drawable/shimmer_background_text"
                android:minWidth="70dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/imageTokoPopuler"
                app:layout_constraintTop_toBottomOf="@+id/textTipeTongkrongan" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


</androidx.cardview.widget.CardView>