<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:elevation="2dp"
    android:layout_centerInParent="true"
    android:background="@color/white"
    app:cardCornerRadius="10dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerPromoBeranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="148dp"
            android:layout_height="170dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagePopulerBeranda"
                android:layout_width="148dp"
                android:layout_height="92dp"
                android:scaleType="fitXY"
                android:background="@color/shimmerColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textMenuPromoBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/manrope_bold"
                android:inputType="textMultiLine|textImeMultiLine|textNoSuggestions"
                android:maxWidth="132dp"
                android:minWidth="132dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@color/shimmerColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagePopulerBeranda"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textTokoPromoBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/manrope_regular"
                android:inputType="textMultiLine|textImeMultiLine|textNoSuggestions"
                android:maxWidth="132dp"
                android:minWidth="132dp"
                android:background="@color/shimmerColor"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/keteranganPromoBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/manrope_bold"
                android:paddingHorizontal="10sp"
                android:minWidth="70dp"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.cardview.widget.CardView>