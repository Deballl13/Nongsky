<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingVertical="10dp"
    android:paddingHorizontal="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgUserReviewDetail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNamaUserReviewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:ellipsize="end"
        android:ems="3"
        android:fontFamily="@font/manrope_regular"
        android:maxWidth="190dp"
        android:maxLines="1"
        android:minWidth="190dp"
        android:text="Radhian Wahyu Elhaq"
        android:textAlignment="textStart"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgUserReviewDetail"
        app:layout_constraintStart_toEndOf="@+id/imgUserReviewDetail"
        app:layout_constraintTop_toTopOf="@+id/imgUserReviewDetail"
        app:layout_constraintVertical_bias="0.170" />

    <TextView
        android:id="@+id/textTanggalReviewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/manrope_regular"
        android:text="19-20-2021"
        android:maxLines="1"
        android:minWidth="70dp"
        android:maxWidth="70dp"
        android:textAlignment="textStart"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgUserReviewDetail"
        app:layout_constraintStart_toEndOf="@+id/imgUserReviewDetail"
        app:layout_constraintTop_toBottomOf="@+id/textNamaUserReviewDetail" />

    <ImageView
        android:id="@+id/imgStarReviewDetail"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="@+id/imgUserReviewDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgUserReviewDetail" />

    <TextView
        android:id="@+id/textNilaiReviewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/fredokaone_regular"
        android:text="4.5"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgStarReviewDetail"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/aksenKoma"
        android:layout_marginTop="5dp"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imgUserReviewDetail"
        />

    <TextView
        android:id="@+id/textKomentarReviewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/manrope_regular"
        android:inputType="textMultiLine"
        android:maxWidth="350dp"
        android:minWidth="350dp"
        android:text="Tempatnya nyaman banget, makanan juga enak. Cuma fasilitas udah banyak rusak."
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/aksenKoma"
        app:layout_constraintTop_toTopOf="@+id/aksenKoma"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>