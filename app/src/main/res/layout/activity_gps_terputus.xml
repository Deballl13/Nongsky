<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:inputType="textNoSuggestions"
    tools:context=".GpsTerputus">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="236dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/gps_terputus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textUtamaGpsTerputus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS Tidak Dapat Terhubung"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/manrope_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textKeteranganGpsTerputus"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Pastikan Anda terhubung dengan GPS agar kami dapat merekomendasikan tempat nongkrong untuk Anda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUtamaGpsTerputus" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGpsTerputus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hidupkan gps"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textKeteranganGpsTerputus" />

</androidx.constraintlayout.widget.ConstraintLayout>