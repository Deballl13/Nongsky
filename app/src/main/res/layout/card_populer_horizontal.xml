<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:elevation="2dp"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_centerInParent="true" >

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerTokoPopulerBeranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="148dp"
            android:layout_height="215dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageTokoPopulerBeranda"
                android:layout_width="148dp"
                android:layout_height="92dp"
                android:scaleType="fitXY"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textNamaTokoPopulerBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/manrope_bold"
                android:inputType="textMultiLine|textImeMultiLine|textNoSuggestions"
                android:maxLines="2"
                android:ems="3"
                android:ellipsize="end"
                android:maxWidth="132dp"
                android:minWidth="132dp"
                android:background="@drawable/shimmer_background_text"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageTokoPopulerBeranda"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textAlamatTokoPopulerBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/manrope_regular"
                android:minWidth="132dp"
                android:maxWidth="132dp"
                android:background="@drawable/shimmer_background_text"
                android:maxLines="1"
                android:ems="3"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toTopOf="@+id/textTipeTokoPopulerBeranda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textTipeTokoPopulerBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/manrope_regular"
                android:minWidth="132dp"
                android:maxWidth="132dp"
                android:maxLines="1"
                android:ems="3"
                android:ellipsize="end"
                android:background="@drawable/shimmer_background_text"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toTopOf="@+id/textJarakPopulerBeranda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textJarakPopulerBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/manrope_regular"
                android:layout_marginTop="5dp"
                android:minWidth="35dp"
                android:background="@drawable/shimmer_background_text"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ratingPopulerBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/manrope_bold"
                android:minWidth="35dp"
                android:background="@drawable/shimmer_background_text"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textJarakPopulerBeranda" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.cardview.widget.CardView>