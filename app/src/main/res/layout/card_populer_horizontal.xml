<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:elevation="2dp"
    app:cardCornerRadius="10dp"
    android:layout_centerInParent="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="148dp"
        android:layout_height="190dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imagePopulerBeranda"
            android:layout_width="148dp"
            android:layout_height="92dp"
            android:scaleType="fitXY"
            android:src="@drawable/mcdonald"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textNamaTokoPopulerBeranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/manrope_bold"
            android:inputType="textMultiLine|textImeMultiLine|textNoSuggestions"
            android:maxWidth="132dp"
            android:text="Nama toko"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagePopulerBeranda"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textTipeTokoPopulerBeranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:fontFamily="@font/manrope_regular"
            android:text="Tipe toko"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/textJarakPopulerBeranda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textJarakPopulerBeranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/manrope_regular"
            android:text="Jarak toko"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textSatuanJarakPopulerBeranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/manrope_regular"
            android:text="Km"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textJarakPopulerBeranda" />

        <TextView
            android:id="@+id/ratingPopulerBeranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:drawableLeft="@drawable/ic_star"
            android:fontFamily="@font/manrope_bold"
            android:text="4.2"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textSatuanJarakPopulerBeranda" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>